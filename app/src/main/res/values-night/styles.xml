<resources>
    <style name="RoundedTextInputLayout1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:windowContentTransitions">true</item>
        <item name="textColor">@color/textColor</item> <!-- This should be a different color for dark mode -->
    </style>
    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">#5F89DF</item>
        <item name="hintTextColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
</resources>
